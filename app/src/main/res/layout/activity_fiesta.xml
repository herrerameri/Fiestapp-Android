<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customAttrs="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgBackFiesta"
                android:layout_width="match_parent"
                android:layout_height="223dp"
                android:background="@drawable/back_fiesta"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:id="@+id/linFotoFiesta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgFotoFiesta"
                    android:layout_width="130dp"
                    android:layout_height="130dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linTituloFiesta"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/linFotoFiesta"
                android:layout_marginTop="18dp"
                android:orientation="vertical">

                <com.mint.fiestapp.views.custom.CustomTextView
                    android:id="@+id/texTitulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxLength="30"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="Casamiento MN"
                    android:textColor="@color/titles"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    customAttrs:customFont="UBUNTU_NORMAL" />

                <com.mint.fiestapp.views.custom.CustomTextView
                    android:id="@+id/texDescripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxLength="100"
                    android:layout_marginTop="8dp"
                    android:paddingLeft="60dp"
                    android:paddingRight="60dp"
                    android:text="There is only one happiness in this life to love and be loved"
                    android:textColor="@color/subtitles"
                    android:textSize="14sp"
                    customAttrs:customFont="UBUNTU_ITALICA" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linNumerosFiesta"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/linTituloFiesta"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="20dp"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.333"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.mint.fiestapp.views.custom.CustomTextView
                        android:id="@+id/texCantidadDias"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="324"
                        android:textColor="@color/titles"
                        android:textSize="22sp"
                        customAttrs:customFont="UBUNTU_BOLD" />

                    <com.mint.fiestapp.views.custom.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/dias_faltantes"
                        android:textColor="@color/subtitles"
                        android:textSize="11sp"
                        customAttrs:customFont="UBUNTU_REGULAR" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/background"></View>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.333"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.mint.fiestapp.views.custom.CustomTextView
                        android:id="@+id/texCantidadFotos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="324"
                        android:textColor="@color/titles"
                        android:textSize="22sp"
                        customAttrs:customFont="UBUNTU_BOLD" />

                    <com.mint.fiestapp.views.custom.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/fotos"
                        android:textColor="@color/subtitles"
                        android:textSize="11sp"
                        customAttrs:customFont="UBUNTU_REGULAR" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/background"></View>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.333"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.mint.fiestapp.views.custom.CustomTextView
                        android:id="@+id/texCantidadInvitados"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="324"
                        android:textColor="@color/titles"
                        android:textSize="22sp"
                        customAttrs:customFont="UBUNTU_BOLD" />

                    <com.mint.fiestapp.views.custom.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/invitados"
                        android:textColor="@color/subtitles"
                        android:textSize="11sp"
                        customAttrs:customFont="UBUNTU_REGULAR" />

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linOpcionesFiesta"
            android:layout_below="@id/linNumerosFiesta"
            android:orientation="vertical"
            android:padding="@dimen/padding_cards"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include layout="@layout/activity_fiesta_informacion"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>