<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customAttrs="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    customAttrs:cardUseCompatPadding="true"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <com.mint.fiestapp.views.custom.CustomTextView
            customAttrs:customFont="UBUNTU_REGULAR"
            android:textColor="@color/subtitles"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/ingrese_codigo"/>

        <EditText
            android:hint="Código"
            android:id="@+id/ediCodigoFiesta"
            android:layout_width="250dp"
            android:textColor="@color/colorPrimary"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/btnAgregarFiesta"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:padding="20dp"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:textColor="@color/white"
            android:text="AÑADIR FIESTA"/>
    </LinearLayout>
</android.support.v7.widget.CardView>